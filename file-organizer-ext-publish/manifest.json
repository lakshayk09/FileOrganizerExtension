{
    "manifest_version": 3,
    "name": "Downloads File Organizer",
    "version": "1.0",
    "description": "Organize your downloads into specific directories based on file types.",

    "permissions": ["downloads", "storage"],

    "background": {
      "service_worker": "background.js"
    },

    "action": {
      "default_title": "Downloads File Organizer",
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
  